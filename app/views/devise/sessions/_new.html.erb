<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h2 class="h3 mb-3 font-weight-normal">Please sign in</h2>
  <%= f.input :email,
                required: false,
                autofocus: true,
                input_html: { autocomplete: "email", class: "form-control mb-3" } %>
  <%= f.input :password,
                required: false,
                input_html: { autocomplete: "current-password", class: " form-control mb-3" } %>
  <div class="checkbox mb-5">
    <label>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </label>
  </div>
  <%= f.button :submit, "Sign In", class: "btn btn-primary" %>
  <%# <%= link_to 'Sign Up', new_account_registration_path, class: 'nav-link btn btn-secondary' %>
<% end %>

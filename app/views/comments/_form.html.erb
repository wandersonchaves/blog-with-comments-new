<%= simple_form_for([@post, @post.comments.build]) do |f| %>
  <!--
  <div class="field">
    <div class="control">
      <%= f.input :name, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
    </div>
  </div>
  -->
  <div class="form-group">
    <div class="control">
      <button type="button" class="btn btn-link col-12" data-toggle="modal" data-target="#exampleModalCenter">
        <%= f.input :comment, input_html: { class: 'form-control' }, wrapper: false, label_html: { class: 'label' } %>
        <% if !account_signed_in? %>
          <%= render 'devise/sessions/new'%>
        <% end %>
      </button>
      <% if account_signed_in? %>
        <%= f.button :submit, class: 'btn btn-primary'%>
      <% end %>
    </div>
  </div>
<% end %>
